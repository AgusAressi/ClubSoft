@{
    ViewData["Title"] = "Cobros";
}

<link rel="stylesheet" href="~/css/Cobros.css" asp-append-version="true" />


<div class="p-3">
    <div class="mt-2" style="height: 100%;">
        <div class="card shadow-sm">
            <div class="card-header row m-0 p-2">
                <div class="col-md-6 d-flex align-items-center">
                    <button type="button" class="btn boton-color"
                        onclick="window.location.href='@Url.Action("NuevoCobro", "Cobros")'">
                        <i class="fa-solid fa-plus fa-2x"></i>
                    </button>

                </div>
                <div class="col-md-6 text-end d-flex align-items-center justify-content-end">
                    <h3 class="m-0"><i class="fa-solid fa-table pe-2"></i>COBROS</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="height: 450px; overflow-y: auto;">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th class="text-center">NÂº Cobro</th>
                                <th class="text-center">Cliente</th>
                                <th class="text-center">Fecha</th>
                                <th class="text-end">Total</th>
                                <th style="width: 70px"></th>
                            </tr>
                        </thead>
                        <tbody id="tbody-Cobros">
                        </tbody>
                    </table>
                </div>
            </div>
            <div id="paginacion" class="card-footer"></div> 
        </div>
    </div>

 
  @section Scripts{
  <script src="~/js/Cobros.js"></script>
}