@{
    ViewData["Title"] = "Informe Rol";
}

<div class="p-3">
    @*TABLA*@
    <div class="mt-2" style="height: 100%;">
        <div class="card shadow-sm">
            <div class="card-header row m-0 p-2">
                <div class="col-md-6 offset-md-6 text-end">
                    <h3 class="m-0"><i class="fa-solid fa-table pe-2"></i>INFORME ROLES</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="height: 450px; overflow-y: auto;">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Rol</th>
                                <th >Nombre</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody id="tbody-InformeRoles">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/InformeRoles.js"></script>
}